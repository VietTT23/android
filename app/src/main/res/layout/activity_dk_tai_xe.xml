<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DkTaiXeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xe công nghệ"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.301">

        <EditText
            android:id="@+id/edt_email_dktx"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Email"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:drawableLeft="@drawable/ic_baseline_email"
            android:drawableStart="@drawable/ic_baseline_email"
            android:drawablePadding="12dp"
            android:inputType="text"
            android:ems="20"/>

        <EditText
            android:id="@+id/edt_ten_dktx"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Họ tên"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:drawableLeft="@drawable/ic_baseline_account"
            android:drawableStart="@drawable/ic_baseline_account"
            android:drawablePadding="12dp"
            android:inputType="text"
            android:ems="20"/>

        <EditText
            android:id="@+id/edt_sdt_dktx"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Điện thoại"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:drawableLeft="@drawable/ic_baseline_phone"
            android:drawableStart="@drawable/ic_baseline_phone"
            android:drawablePadding="12dp"
            android:inputType="text"
            android:ems="20"/>

        <EditText
            android:id="@+id/edt_mk_dktx"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:drawableStart="@drawable/ic_baseline_lock"
            android:drawableLeft="@drawable/ic_baseline_lock"
            android:drawablePadding="12dp"
            android:ems="20"
            android:hint="Mật khẩu"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edt_xnmk_dktx"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:drawableStart="@drawable/ic_baseline_lock"
            android:drawableLeft="@drawable/ic_baseline_lock"
            android:drawablePadding="12dp"
            android:ems="20"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/btn_dktx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng kí"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:background="#64C63A"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/txt_dntx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Đã có tài khoản? Đăng nhập"
            android:textColor="#0000EE"
            android:textSize="16dp" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>